<h1 class="text-center">Статьи</h1>

<%= link_to 'new articles', articles_new_path, :class => "btn btn-primary" %>
<%= link_to 'Удалить все',   article_delete_all_path, method: :delete, data: { confirm: 'Delete?'}, :class => 'btn btn-danger'%>

<br>



<div class="d-flex justify-content-between flex-wrap">
  <%- @articles.each do |article| %>
  <div class="card text-white bg-info mb-3 mt-3 w-50 " style="max-width: 18rem;">
    <div class="card-header bg-danger"> <%= link_to article.name, article_show_path(article.url), :class => 'text-light' %></div>


    <div class="card-body">
      <h5 class="card-title"><%= article.text %></h5>
      <p class="card-text"><%= article.url %></p>

    </div>
  </div>



  <%- end %>
</div>






