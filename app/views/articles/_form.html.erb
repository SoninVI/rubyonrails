<pre> <%= p @article.to_json %></pre>
<pre> <%= p @article.errors.to_json %></pre>



<% if @article.errors.any? %>
  <div class="errors">
    <h4><%= pluralize(@article.errors.count, "error") %></h4>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
  <%end %>

<div class="row">
  <div class="col-sm-6">
      <%= form_for @article , url: @article.new_record?  ? article_path : article_update_path(@article.url) do |f| %>

      <div class="form-group">
        <label for="exampleInputEmail1">name</label>
        <%= f.text_field :name, :class => 'form-control'%>
        <small id="emailHelp" class="form-text text-muted">Введите название статьи</small>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">url</label>
        <%=f.text_field  :url, :class => 'form-control'%>
        <small id="emailHelp" class="form-text text-muted">Введите уникальный URL</small>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">title</label>
        <%=f.text_field :text, :class => 'form-control'%>
        <small id="emailHelp" class="form-text text-muted">Введите текст статьи</small>
      </div>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
         Save
      <% end %>
    <% end %>
  </div>
</div>






